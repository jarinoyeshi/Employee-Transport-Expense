    <header>
        <h1>Add Employee</h1>
    </header>
    <!-- <form action="/addUser" method="post">-->


    <form action="/api/users" method="post" id="addUser>

        <div class="container">
           <label for="Employee_ID">Employee ID</label>
            <input type="text" placeholder="Enter a user ID" name="Employee_ID" pattern="\d{7}" required>

            <label for="Full_Name">Full Name</label>
            <input type="text" placeholder="Enter your first name" name="Full_Name" required>
    
            <label for="Job_Title">Job Title</label>
            <input type="text" placeholder="Enter your Job Title" name="Job_Title" required>
    
            <label for="Department">Department</label>
            <input type="text" placeholder="Enter your Department" name="Department" required>
    
    
            <label for="Business_Unit">Business Unit</label>
            <input type="text" placeholder="Enter your Business Unit" name="Business_Unit" required>

            <label for="Gender">Gender</label>
            <input type="text" placeholder="Enter your Gender" name="Gender" required>

            <label for="Age">Age</label>
            <input type="text" placeholder="Enter your Age" name="Age" required>

            <label for="Hire_Date">Hire Date</label>
            <input type="text" placeholder="Enter your Hire Date" name="Hire_Date" required>

            <label for="Annual_Salary">Annual Salary</label>
            <input type="text" placeholder="Enter your Annual_Salary" name="Annual_Salary" required>

            <label for="Bonus_percentage">Bonus percentage</label>
            <input type="text" placeholder="Enter your Bonus percentage" name="Bonus_percentage">

            <label for="Exit_Date">Exit Date</label>
            <input type="text" placeholder="Enter your Exit Date" name="Exit_Date">

            <label for="Email">Email</label>
            <input type="text" placeholder="Enter your email address" name="Email" required>

            <label for="Phone">Phone</label>
            <input type="text" placeholder="Enter your Phone" name="Phone" required>


    
            <a href="/"><button type="submit" class="button">Submit</button></a>

    
        </div>

    </form>


    <div class="card_row">
        <div class="card">
                <div class="card_border" >
                        <div class="card_header"> Upload Excel File</div>
                            <div class="card_body" >
                              <form action="/addUserFromExcel" method="POST" enctype="multipart/form-data" class="form_class">
                             <div class="form_group">
                               <label for="excel" class="form_control_over">Browse File</label>
                               <input type="file" class="form-control" name="excel" required><br><br>
                               <input type="submit" value="Submit" class="submit_button">
                             </div>
                              </form>
                            </div>
                        </div>
                    </div>
    </div><br><br>

