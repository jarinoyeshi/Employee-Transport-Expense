

    <!---------------------------Header---------------------------------------->
    <%- include( "header-footer/header") %>
    
        
        <header>
            <h1>Add Driver Details </h1>
        </header>
    
    
        <form action="/api/driver" method="post" id="addAdmin">
    
            <div class="container">
     
               <label for="ID">Driver Id</label>
                <input type="text" placeholder="Enter a Admin ID" name="ID" >
    
                <label for="Full_Name">Full Name</label>
                <input type="text" placeholder="Enter your full name" name="Full_Name" required>
        
        
                <label for="Transport_id">Transport id</label>
                <input type="text" placeholder="Enter Transport id" name="Transport_id" required>
        
        
                <label for="Salary">Salary</label>
                <input type="text" placeholder="Enter Salary" name="Salary" required>
    
                <br>
                <br>
    
                <label for="Hire_date">Hire_date</label>
                <input type="text" placeholder="Enter Hire date" name="Hire_date" required>
    
                <label for="Exit_Date">Exit Date</label>
                <input type="text" placeholder="Enter Exit Date" name="Exit_Date" required>

                <label for="Phone">Phone</label>
                <input type="text" placeholder="Enter your Phone" name="Phone" required>
        
                <a href="/index"><button type="submit" class="button">Submit</button></a>
    
        
            </div>
    
        </form>
    
